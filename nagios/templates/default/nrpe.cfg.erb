log_facility=daemon
pid_file=/opt/nrpe/var/run/nrpe.pid
server_port=5666
nrpe_user=nagios
nrpe_group=nagios
allowed_hosts=<%= (node[:nagios] && node[:nagios][:allowed_hosts]) || "127.0.0.1" %>
dont_blame_nrpe=1
debug=0
command_timeout=60
connection_timeout=300

command[check_load]=/opt/nagios-plugins/libexec/check_load -w $ARG1$ -c $ARG2$
command[check_disk]=/opt/nagios-plugins/libexec/check_disk -w $ARG1$ -c $ARG2$ -p $ARG3$
command[check_swap]=/opt/nagios-plugins/libexec/check_swap -w $ARG1$ -c $ARG2$
command[check_file_age]=/opt/nagios-plugins/libexec/check_file_age -w $ARG1$ -c $ARG2$ -f $ARG3$
command[check_dmesg]=/opt/nagios-custom-plugins/libexec/check_dmesg -w $ARG1$ -c $ARG2$
command[check_md_raid]=/opt/nagios-custom-plugins/libexec/check_md_raid
