log_facility=daemon
pid_file=/var/run/nagios/nrpe.pid
server_port=5666
nrpe_user=nagios
nrpe_group=nagios
allowed_hosts=<%= (node[:nagios] && node[:nagios][:allowed_hosts]) || "127.0.0.1" %>
dont_blame_nrpe=1
debug=0
command_timeout=60
connection_timeout=300

command[check_load]=/opt/nagios-plugins/libexec/check_load -w $ARG1$ -c $ARG2$
command[check_disk]=/opt/nagios-plugins/libexec/check_disk -w $ARG2$ -c $ARG3$ -p $ARG1$
command[check_swap]=/opt/nagios-plugins/libexec/check_swap -w $ARG1$ -c $ARG2$
